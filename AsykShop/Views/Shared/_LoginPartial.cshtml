@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <nav class="my-2 my-md-0 mr-md-3">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <a id="manage" class="p-2 text-success" style="margin-right:18px" asp-area="Identity" asp-page="/Account/AccountManager" title="Manage">Сәлем, @UserManager.GetUserName(User)!</a>
            <button id="logout" type="submit" class="btn btn-outline-danger">Шығу</button>
        </form>
    </nav>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Кіру</a>
        </li>
    }
</ul>
